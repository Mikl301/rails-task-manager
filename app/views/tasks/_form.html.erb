<%= simple_form_for @task do |f| %>
  <%= f.input :title %>
  <%= f.input :details %>
  <% if @task.new_record? %>
  <% else %>
    <%= f.input :completed %>
  <% end %>
  <%= f.submit class: 'btn btn-primary mb-3' %>
<% end %>
<% if @task.new_record? %>
  <%= link_to "Back to list", tasks_path  %>
<% else %>
  <%= link_to "Back to task", task_path  %>
<% end %>