<h1><%= @task.title %></h1>

<%= link_to "Edit task", edit_task_path  %>

<p><%= @task.details %></p>
<p>
  <% if @task.completed %>
    <input type="checkbox" checked> This task is completed
  <% else %>
    <input type="checkbox"> This task is not completed yet
  <% end %>
</p>

<%= link_to "Back to list", tasks_path  %>