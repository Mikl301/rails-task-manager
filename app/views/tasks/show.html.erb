<div class="card p-3 mb-3">
  <h1 class="border-bottom">
    <%= @task.title %>
    <%= link_to icon('far', 'edit'), edit_task_path  %>
  </h1>
  <div class="task-detail pl-3">
    <p><%= @task.details %></p>
    <p>
      <% if @task.completed %>
        <input type="checkbox" checked> This task is completed
      <% else %>
        <input type="checkbox"> This task is not completed yet
      <% end %>
    </p>
  </div>
</div>

<%= link_to "Back to list", tasks_path, class: "pl-4"  %>